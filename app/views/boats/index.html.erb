<div>
	<% @boats.each do |boat| %> <!-- displays all boats -->
		<h4> 
			Boat Name: <%= boat.name %> <br />
			Location: <%= boat.location %> <br />
			Amount of Containers: <%= boat.container_amount %> 
		</h4>
	<% end %>

	<!-- jobss modal  -->
	<div class="modal fade" id="myJobsModal" tabindex="-1" role="dialog">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title">Choose Your Job</h4>
	      </div>
	      <div class="modal-body">
	      	<%= render "jobs/adding_jobs" %>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->
</div>
