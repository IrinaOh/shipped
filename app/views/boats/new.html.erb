<!-- form for creating a new boat -->
<%= form_for @boat, :url => boats_path, html: { multipart: true } do |f| %>
	<p>
		<%= f.label :name, "Name" %>
		<%= f.text_area :name %>
	</p>
	<p>
		<%= f.label :location, "Location" %>
		<%= f.select :location, ['China', 'Finland', 'Spain', 'US'] %>
	</p>
	<p>
		<%= f.label :container_amount, "Container Amount" %>
		<%= f.text_area :container_amount %>
	</p>
	<p>
		<%= f.label :avatar, "Boat Image" %>
		<%= f.file_field :avatar %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>